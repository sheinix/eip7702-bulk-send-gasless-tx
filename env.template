# Copy this file to .env and fill in your actual values
# Private key for deployment (with or without 0x prefix)
PRIVATE_KEY=your_private_key_here

# RPC URLs for different networks
MAINNET_RPC_URL=https://eth-mainnet.alchemyapi.io/v2/YOUR_API_KEY
SEPOLIA_RPC_URL=https://eth-sepolia.alchemyapi.io/v2/YOUR_API_KEY
POLYGON_RPC_URL=https://polygon-mainnet.alchemyapi.io/v2/YOUR_API_KEY
BASE_RPC_URL=https://base-mainnet.alchemyapi.io/v2/YOUR_API_KEY
BSC_RPC_URL=https://bsc-dataseed.binance.org

# Generic RPC URL (fallback)
RPC_URL=https://your-default-rpc-url.com

# Optional: Etherscan API keys for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key